pipeline {
    agent any

    tools { 
        maven 'maven_3_5_4' 
        jdk 'jdk8' 
    }

    stages {
        stage('Package') {
            steps {
                sh 'mvn clean package -Dmaven.test.skip=true'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Maven Install') {
            steps {
                sh 'mvn install -Dmaven.test.skip=true'
            }
        }
    }
}
    