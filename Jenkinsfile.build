pipeline {
    agent any

    tools { 
        maven 'maven_3_5_4' 
        jdk 'jdk8' 
    }

    stages {
        stage('Package') {
            steps {
            	// differ testing to test stage
                sh 'mvn clean package -Dmaven.test.skip=true'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
        stage('Repository') {
            steps {
            	// test complete in test stage
                sh 'mvn deploy -Dmaven.test.skip=true'
            }
        }
    }
}
